<div class="outside">
    <h1>Editing Book</h1>


<%# コメントアウト %>
<%= form_with model: @book, url: book_path(@book.id),method: :patch do |f| %>
     <%#メソッド　がパッチ　画面にメソッドがGETメソッド以外だと画面にsh用事表示されない%>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<div class="update-button">
<%= f.submit "Update Book" %>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

</div>

<div class="option">
<ul class="move">    
<li><%= link_to "show",book_path %></li>
<li><%= link_to "Back",books_path %></li>
</ul>
</div>
<% end %>


</div>

 
