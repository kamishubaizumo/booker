<div class="outside">
<h1>Book</h1>


<table>
  <tr>
    <td class="title t-title">title</td>
    <td class="body t-title">body</td>
  </tr>

  
  <% @books.each do |book| %>

  <tr>
    <td class="title"><%= book.title %></td>
    <td class="body"><%= book.body %></td>
  <div class="option">
    <td class="sed"><%= link_to "Show",book_path(book.id) %></td>
    <td class="sed"><%= link_to "Edit",edit_book_path(book.id) %></td>
    <td class="sed"><%= link_to "Destroy",book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></th>
  </div>
  </tr>

<% end %>
</table>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>title</h4>
    <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit "Create Book" %></p>


  <% if @book.errors.any? %>
  <div class="error">
  <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <%= @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    </div>
<% end %>


<% end %>

</div>



